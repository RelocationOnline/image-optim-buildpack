#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>


BUILD_DIR=$1
CACHE_DIR=$2
VENDOR_DIR="vendor"

indent() {
  sed -u 's/^/       /'
}

echo "-----> Adding Item-Optim binaries"

cp -vr ${BUILD_DIR}/${VENDOR_DIR}/image-optim ${HOME}/${VENDOR_DIR} | indent
export PATH="$PATH:$HOME/vendor/image-optim"
